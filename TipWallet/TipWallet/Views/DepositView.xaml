<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipWallet.Views.DepositView">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot Title="Deposit">
                    <TableSection>
                        <TextCell Text="Enter Amount"/>
                        <EntryCell LabelColor="Red" Label="Amount" Placeholder="$0.00"/>
                        <EntryCell LabelColor="Red" Label="Date" Text="Date"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Add Funds"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>