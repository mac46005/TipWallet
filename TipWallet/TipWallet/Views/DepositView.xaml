<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipWallet.Views.DepositView">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot Title="Deposit">
                    <TableSection>
                        <TextCell Text="Enter Amount"/>
                        <EntryCell LabelColor="Red" Label="Amount" Placeholder="$0.00" Text="{Binding Deposit.Amount}"/>
                        <EntryCell LabelColor="Red" Label="Description" Placeholder="Enter description here" Text="{Binding Deposit.Description}"/>
                        <ViewCell>
                            <DatePicker Date="{Binding Deposit.TimeStamp}"/>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Add Funds" Command="{Binding AddFunds}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>